<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/activity_formulario_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="4dp"
        android:text="Salada de frutas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_formulario_descricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Laranja MaÃ§a"
        app:layout_constraintEnd_toEndOf="@+id/activity_formulario_nome"
        app:layout_constraintStart_toStartOf="@+id/activity_formulario_nome"
        app:layout_constraintTop_toBottomOf="@+id/activity_formulario_nome" />

    <TextView
        android:id="@+id/produto_item_valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="15,00"
        app:layout_constraintEnd_toEndOf="@+id/activity_formulario_nome"
        app:layout_constraintStart_toStartOf="@+id/activity_formulario_nome"
        app:layout_constraintTop_toBottomOf="@+id/activity_formulario_descricao" />

</androidx.constraintlayout.widget.ConstraintLayout>